{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": ["bin/**/*.ts", "lib/**/*.ts"]
}

